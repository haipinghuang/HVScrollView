        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCol1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#9aa3b6"
            android:padding="3dp"
            android:singleLine="true"
            android:textSize="19sp"
            tools:text="column1" />

        <TextView
            android:id="@+id/tvCol2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#a3b8e6"
            android:padding="3dp"
            android:singleLine="true"
            android:textSize="19sp"
            tools:text="column2" />

        <TextView
            android:id="@+id/tvCol3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#b8bfcf"
            android:padding="3dp"
            android:singleLine="true"
            android:textSize="19sp"
            tools:text="column3" />

        <TextView
            android:id="@+id/tvCol4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#a3b8e6"
            android:padding="3dp"
            android:singleLine="true"
            android:textSize="19sp"
            tools:text="column4" />

        <TextView
            android:id="@+id/tvCol5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#b8bfcf"
            android:padding="3dp"
            android:singleLine="true"
            android:textSize="19sp"
            tools:text="column5" />
        <TextView
            android:id="@+id/tvCol6"
            android:layout_width="wrap_content"
